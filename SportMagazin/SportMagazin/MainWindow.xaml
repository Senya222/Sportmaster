<Window x:Class="SportMagazin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportMagazin"
        mc:Ignorable="d"
        Title="Спортмастер" Height="450" Width="800" MinHeight="450" MinWidth="800" Icon="Ресурсы/Логотип/лого.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="346*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
            <TextBlock Text="Спортмастер" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontSize="18"/>
            <Image Source="Ресурсы\Логотип\лого.jpg" Margin="5"/>
        </StackPanel>
        <Frame x:Name="Container" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
